
<div class="container py-5" id="edittech">
{{!-- <div class="container py-5"> --}}
    <div class="col-md-12">

        <div class="form-add">

            <div class="form-update">
              <form class="container-post postUpdater">

                <h2 class="display-1 font-weight-bold mb-5">Update Your Post</h2>


                <div class="form-group m-2">
                    <label for="transport-cost">Title</label>
                    <input class="form-input" type="text" id="title" value="{{post.title}}" />
                </div>


                <div class="form-group m-2">
                    <label for="content">Content</label>
                    <textarea class="form-input" type="text" id="content" rows="8" cols="80" >{{post.content}}</textarea>
                </div>
            </div>

                <button type="submit" class="btn btn-light m-2" id="createPost" >Update</button>
              </form>
            </br>
        </div>
    </div>
    <div id='userId' data-id={{userId}}></div>
</div>






